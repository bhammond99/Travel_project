<h1>Listing destinations</h1>


<div class="row"
      <% @destinations.each do |destination| %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-body">
            <h1><%= destination.city %></h1>
            <h2><%= destination.country %></h2>
            <%= image_tag destination.avatar.url(:medium) %>
            <p><%= destination.description %></p>
            <div class="btn-group">
            <%= link_to 'Show', edit_destination_path(destination), class: "btn btn-default" %>
            <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-default" %>
            <%= link_to 'Destroy', edit_destination_path(destination), class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>      
    <% end %>
<br>

<%= link_to 'New Destination', new_destination_path %>
